{
  "name": "presentation-timer",
  "version": "1.0.0",
  "description": "プレゼンテーションタイマー - 残り時間を大きく表示し、アラート音で知らせるタイムキーパーアプリ",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headless": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,html,md}\"",
    "check-all": "npm run lint && npm run format:check && npm run test",
    "lighthouse": "lighthouse http://localhost:5173 --view"
  },
  "keywords": [
    "presentation",
    "timer",
    "timekeeper",
    "countdown",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "jsdom": "^23.0.0",
    "lighthouse": "^11.4.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
